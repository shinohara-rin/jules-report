+import type { InferOutput } from 'valibot'
+
+import { array, date, literal, number, object, optional, pipe, string, transform, union } from 'valibot'
+
+// --- Enums & Configs ---
+
+export const AvatarModelConfigSchema = object({
+  vrm: optional(object({
+    urls: array(string()),
+  })),
+  live2d: optional(object({
